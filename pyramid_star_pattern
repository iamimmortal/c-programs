#include<stdio.h>
#include<conio.h>
void main()
{
	int n,i,j,k;
	printf("Enter height of pattern\n");
	scanf("%d",&n);
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=n-i;j++)
		{
			printf(" ");
		}
	  
	    for(k=1;k<=i;k++)
	    {
	    	printf("* ");
	    	}
	    	printf("\n");
		}
		//down pattern 
		for(i=n;i>=1;i--)
	{
		for(j=n;j>=i+1;j--)
		{
			printf(" ");
		}
	  
	    for(k=i;k>=1;k--)
	    {
	    	printf("* ");
	    	}
	    	printf("\n");
		}
}